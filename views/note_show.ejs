<!DOCTYPE HTML>
<html>
  <head>
      <meta name="viewport" content="width = device-width, initial-scale = 1">
      <title>All Notes page</title>
      <!-- jQuery library -->
      <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
      <!-- Latest compiled JavaScript -->
      <!-- Latest compiled and minified CSS -->
      <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
      <link rel='stylesheet' href='/stylesheets/note-show-page.css'/>
      <link rel='stylesheet' href='/stylesheets/style.css'/>
  </head>
  <body>
    <div id="note-show-page">
      <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container-fluid">
          <!-- Brand and toggle get grouped for better mobile display -->
          <div class="navbar-header design-yellow right-padding">
            <!-- <a class="navbar-brand inline-block middle" href="/"><img class="logo" src="img/newellove.png"></a> -->
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <div id ="nav-indulge" class="inline-block">
              <p class="gabriola design-purple">Indulge</p>
            </div>
          </div>

          <!-- Collect the nav links, forms, and other content for toggling -->
          <div class="collapse navbar-collapse design-yellow" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav navbar-right">
              <li class="right-padding text-sm design-purple"><a href="/logout">Logout</a></li>
            </ul>
          </div><!-- /.navbar-collapse -->
          <div class="container-fluid">
            <div id="icon-navbar">
              <div class="container full-width">
                <div class="row">
                  <div class="col-xs-4" onclick="document.location = '/notes/new'">
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                  </div>
                  <div class="col-xs-4" onclick="document.location = '/notes'">
                    <span class="orange-focus glyphicon glyphicon-th-large" aria-hidden="true"></span>
                  </div>
                  <div class="col-xs-4" onclick="document.location = '/theme'">
                    <span class="glyphicon glyphicon-heart" aria-hidden="true"></span>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div><!-- /.container-fluid -->
      </nav>
      <div class="showNote">
        <div class="container text-center">
          <div class="row">
            <div class="col-xs-4">
            </div>
            <div class="col-xs-4">
              <div class="note-edit-form">
                <h1 class="text-lg design-purple">Title:</h1>
                <div class="note-title">
                  <p> <%= note.title %> </p>
                </div>
                <h1 class="text-lg design-purple">Description:</h1>
                <div class="note-desc">
                  <p> <%= note.description %> </p>
                </div>
              </div>
              <div>
                <div class="glyp-div">
                  <form  id="trash" method="POST" action="/notes/<%=note.id%>?_method=delete">
                     <button class="design-purple" type="submit">
                      <span class="glyphicon glyphicon-trash grey" aria-hidden="true"></span></button>
                  </form>
                  <form id="pencil" action="/notes/<%= note.id %>/edit">
                    <button class="design-purple" type="submit">
                      <span class="glyphicon glyphicon-pencil grey" aria-hidden="true"></span></button>
                   </form>
                </div>
              </div>
            </div>
            <div class="col-xs-4">
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>